{% trans_default_domain 'FOSUserBundle' %}

<section id="basic-form-layouts">
    <div class="row ">
        <div class="col-md-4 offset-md-4 col-xs-8 offset-xs-2 box-shadow-2 p-0 clearfix mb-3">
            <div class="card border-grey border-lighten-3 px-2 py-2 row mb-0">
                <div class="card-header no-border">
                    <h3 class="card-title mt-1 text-xs-center uppercase">Cambiar contraseña</h3>

                </div>
                <div class="card-body collapse in">

                    <div class="card-block">
                        <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_request form-horizontal">

                            {% for errorItem in form.plainPassword.first.vars.errors %}

                                <div class="rowError" {% if form.plainPassword.first.vars.errors|length %}style="display: block"{% else %}style="display: none"{% endif %}>
                                    <div class="alert bg-warning alert-icon-right alert-arrow-right alert-dismissible fade in" role="alert">

                                        <span id="itemError">

                                            <strong> {{ errorItem.message }}<br></strong> 

                                        </span>
                                    </div>
                                </div><!--row-->

                            {% endfor %}
                            
                            {% if error is defined%}

                            <div class="rowError" >
                                <div class="alert bg-warning alert-icon-right alert-arrow-right alert-dismissible fade in" role="alert">

                                    <span id="itemError">

                                        <strong> {{ error.messageKey|trans(error.messageData, 'security') }}<br></strong> 

                                    </span>
                                </div>
                            </div><!--row-->

                        {% endif %}

                            <div class="form-group position-relative">
                                <div class="col-md-12">     {{ form_widget(form) }} </div>  
                                
                                <div class="col-md-12">                                               
                                    <p class="tag-default tag-warning block-tag text-xs-left p-1px">
                                        <small class="block-area white">La contraseña debe contener al menos 6 caracteres, incluyendo solo letras minúsculas y números</small>
                                    </p>                                                
                                </div>                                               
                            </div><!--registroCampo doble-->

                            <div class="form-actions right">
                                <a href="{{ path('fos_user_security_login') }}" class="btn btn-warning mr-1">Cancelar</a>

                                <button type="submit" id="_submit" name="_submit" class="btn btn-primary">{{ 'resetting.reset.submit'|trans }}</button>
                            </div>
                        </form>

                    </div>


                </div>
            </div>
        </div>


    </div>


</section>

