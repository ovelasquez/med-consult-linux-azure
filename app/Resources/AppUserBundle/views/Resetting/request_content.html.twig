{% trans_default_domain 'FOSUserBundle' %}


<section id="basic-form-layouts">
    <div class="row ">
        <div class="col-md-4 offset-md-4 col-xs-8 offset-xs-2 box-shadow-2 p-0 clearfix mb-3">
            <div class="card border-grey border-lighten-3 px-2 py-2 row mb-0">
                <div class="card-header no-border">
                    <h3 class="card-title mt-1 text-xs-center uppercase">Recupera tu cuenta</h3>

                </div>
                <div class="card-body collapse in">

                    <div class="card-block">
                        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request form-horizontal">
                            {% if invalid_username is defined %}
                                <div class="cuadro uno cuadroError"><p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p></div>
                                    {% endif %}

                            <fieldset class="form-group position-relative has-icon-left">
                                <input type="text" class="form-control input-lg" id="username" name="username" placeholder="Correo" required>
                                <div class="form-control-position">
                                    <i class="ficon icon-mail6"></i>
                                </div>
                            </fieldset>

                            <div class="form-actions right">
                                <a href="{{ path('fos_user_security_login') }}" class="btn btn-warning mr-1">Cancelar</a>

                                <button type="submit" id="_submit" name="_submit" class="btn btn-primary">Recuperar</button>
                            </div>
                        </form>

                    </div>


                </div>
            </div>
        </div>


    </div>


</section>




