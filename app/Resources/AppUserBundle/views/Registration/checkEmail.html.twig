{% extends "AppUserBundle::layout-login.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    
    <section id="basic-form-layouts">
        <div class="row ">
            <div class="card col-md-4 offset-md-4 col-xs-8 offset-xs-2 box-shadow-2 p-0 clearfix mb-3">
                <div class=" border-grey border-lighten-3 px-2 py-2 row mb-0">
                    <div class="card-header no-border">
                        <h3 class="card-title mt-1 text-xs-center uppercase">Confirma tu cuenta</h3>

                    </div>
                    <div class="card-body collapse in">

                        <div class="card-block">
                            <div class="card-text">                                
                                <div class="regMedMiddle">
                                    <div class="regMedMiddleSup">

                                        <p  class="text-xs-center">{{ 'registration.check_email'|trans({'%email%': user.email}) }}</p>
                                     
                                    </div><!--regMedMiddleSup-->

                                </div><!--regMedMiddle-->

                            </div>

                        </div>
                        <div class="px-2 py-0 mb-1" >
                            <a href="{{ path('fos_user_security_login') }}" class="btn btn-primary btn-block btn-lg"><i class="icon-unlock2"></i> Iniciar</a>                  
                        </div>

                    </div>
                </div>
            </div>


        </div>


    </section>
    
{% endblock fos_user_content %}
