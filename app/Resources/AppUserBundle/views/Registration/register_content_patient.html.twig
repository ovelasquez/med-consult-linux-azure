    <div class="registroFormulario tres register-profile">
        <h3>Perfil de usuario APP</h3>
        <div class="registroCampo fieldsPatient">
            <fieldset id="fieldsPatient">
            {{ render(controller(
                'AppBundle:Patients:newfront'        
            )) }}
            </fieldset>
        </div>
        <input type="button" value="Volver" class="submit dos rojoFuerte back">
        <input type="submit" value="{{ 'registration.submit'|trans }}" class="submit rojoFuerte"/>
