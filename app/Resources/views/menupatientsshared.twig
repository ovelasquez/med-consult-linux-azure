{# empty Twig template #}
{%if patient is not defined%}
{% set patient = entity%}
{%endif%}
<h5>{{patient.user.name}}</h5>
<div class="pacientesUsuarioImg">{% if patient.photo is defined and patient.photo!='' %}<img width='100px' src="{{ asset('uploads/documents/' ~ patient.photo) }}" />{%endif%}</div><!--pacientesUsuarioImg-->
<br>
<p><span>Edad:</span>{% if patient.yearsold is defined and patient.yearsold>0 %}{{ patient.yearsold }}{% endif %}</p>
<p><span>Genero:</span> {% if patient.gender is defined and patient.gender=='female' %}Femenino{%else%}{% if patient.gender is defined and patient.gender=='male' %}Masculino{% endif %}{% endif %}</p>
<p><span>Fecha de nacimiento:</span> {% if patient.birthdate %}{{ patient.birthdate|date('d-m-Y') }}{% endif %}</p>
