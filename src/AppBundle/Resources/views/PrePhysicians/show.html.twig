{% extends '::baseadm.html.twig' %}

{% block body -%}
    <h5>PrePhysicians</h5>

    <table  cellpadding="0" cellspacing="0" border="0" width="90%"  class="tablaAdm tableShow">
        <tbody>
            <tr>
                <th>Firtsname</th>
                <td>{{ entity.firtsName }}</td>
            </tr>
            <tr>
                <th>Middlename</th>
                <td>{{ entity.middleName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ entity.lastName }}</td>
            </tr>
            <tr>
                <th>Abms</th>
                <td>{{ entity.abms }}</td>
            </tr>
            <tr>
                <th>Practicetype</th>
                <td>{{ entity.practiceType }}</td>
            </tr>
            <tr>
                <th>Postalcode</th>
                <td>{{ entity.postalCode }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ entity.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Hearaboutus</th>
                <td>{{ entity.hearAboutUs }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{{ entity.dateTime|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if entity.status %}Aprobado{% else %}En espera de Aprobacion{% endif %}</td>
            </tr>
            <tr>
                <th>Usuario</th>
                <td>{% if entity.physician.id is defined %}<a href="{{ path('physicians_show', { 'id': entity.physician.id }) }}">{{ entity.physician.user.name }}</a>{% else %}{% if entity.status %}En espera de registro{% else %}En espera de Aprobacion{% endif %}{% endif %}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('prephysicians') }}"  class="submit btnAdm lilaOscuro">
            Volver
        </a>
    </li>
    <li>
        <a href="{{ path('prephysicians_edit', { 'id': entity.id }) }}" class="submit btnAdm rojoFuerte">
            Editar
        </a>
    </li>
    
</ul>
{% endblock %}
