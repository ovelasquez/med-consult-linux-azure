{% extends '::base.html.twig' %}

{% block body -%}


    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" id="horz-layout-basic"> Compartir historial </h4>

                </div>
                <div class="card-body collapse in">
                    <div class="card-block ">
                    {{ form_start(edit_form) }}
                    <div class="form-group mb-1">
                        <label for="inputEmail1" class="col-sm-3 form-control-label">Correo</label>
                        <div class="col-sm-9">
                           {{ entity.email }}
                        </div>
                       
                    </div>
                    <div class="form-group mb-1">
                        <label for="inputEmail1" class="col-sm-3 form-control-label">Nombre</label>
                        <div class="col-sm-9">{{ entity.name }}</div>
                    </div>
                    <div class="form-group mb-1">
                        <label for="inputEmail1" class="col-sm-3 form-control-label">Mensaje</label>
                        <div class="col-sm-9">{{ entity.message }}</div>
                    </div>
                    <div class="form-group mb-1">
                        <label for="inputEmail1" class="col-sm-3 form-control-label"> Días disponibles</label>
                        <div class="col-sm-9">{{ form_widget(edit_form.available, {'attr': {'class': 'form-control', 'placeholder':"Días disponibles"} }) }}</div>
                    </div>
                    
                    <div class="form-actions right  mb-1">
                        <a  href="{{ path('patientssharemedicalhistory') }}" class="btn btn-warning mr-1">
                            <i class="icon-cross2"></i> Cancelar
                        </a>
                         <button type="submit" style=" display: inline-block" class="btn btn-primary float-xs-right"> <i class="icon-check2"></i>  Actualizar</button>
                    </div>
                    
                    {{ form_end(edit_form) }}

               
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
