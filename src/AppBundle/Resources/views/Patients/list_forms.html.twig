{% extends '::basecropingimage.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}
{% block body -%}
    <div class="row" style="height:90%; ">
        <div class="col-xs-3 col-md-3 col-lg-3 pacientesLeftAzul">
            {{ include('menupatients.twig') }}
        </div><!--pacientesLeftAzul-->
        <div class="col-xs9 col-md-9 col-lg-9 pacientesRight">
            <div class="docHomeIntScroll mCustomScrollbar">
                <div class="pacientesRightEspacio">                    
                    <h5>Formularios</h5>                    
                    {% for  key, entityform in entities %}                          
                        <div class="pacientesHistoriaSeccion">
                            <div class="pacientesHistoriaSeccionImagen listForms"></div><!--pacientesHistoriaSeccionImagen laboratorio-->
                            <p>{{entityform.name}}</p>
                            <a href="{{  path('patients_view_form', {'form': entityform.formName,'id': app.user.id}) }}" class="submit lilaOscuro">Ir al formulario</a>
                            <br>
                        </div><!--pacientesHistoriaSeccion-->                        
                    {% endfor %}

                </div><!--pacientesRightEspacio-->
            </div><!--docHomeIntScroll mCustomScrollbar-->
        </div><!--pacientesRight-->
    </div><!--row-->  
    <div class="row" style="height:10%; ">
        <div class="col-xs-12 barrafooter barraf_acercade">
            <ul>
                <li class="current"><a href="#">Formularios</a><div class="arrow acercaNosotros"></div></li>                
            </ul>
        </div>
    </div><!--row-->
    
{% endblock %}

{% block javascripts %}


    <script>
        $(document).ready(function () {
            $(".files-pat").each(function () {
                $(this).attr("href", "{{ asset('/', absolute=true) }}" + $(this).attr("rel") + '{{ dir }}/' + $(this).html());

            });

        });
        

    </script>

{% endblock %}

