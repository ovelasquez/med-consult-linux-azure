{% extends '::baseadm.html.twig' %}

{% block body -%}
    <h5>Specialties list</h5>

    <table cellpadding="0" cellspacing="0" border="0" width="90%" class="table-striped tablaAdm ">
        <thead>
            <tr>
                
                <th>Name</th>
                <th class=" col-lg-1 col-md-1 col-sm-1" colspan="2">OPERACIONES</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    
                    <td><a href="{{ path('specialties_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>

                    <td>
                        <a href="{{ path('specialties_show', { 'id': entity.id }) }}" >ver</a>
                    </td>
                    <td>
                        <a href="{{ path('specialties_edit', { 'id': entity.id }) }}" >editar</a>
                    </td>

                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('specialties_new') }}" class="submit submitAdm lilaOscuro">
                Crear             </a>
        </li>
    </ul>
{% endblock %}
