{% extends '::baseadm.html.twig' %}

{% block body -%}
    <h5>Contacts list</h5>

    <table cellpadding="0" cellspacing="0" border="0" width="90%" class="table-striped tablaAdm ">
        <thead>
            <tr>
                <th>Email</th>
                <th>Subject</th>
                <th>Datetime</th>             
                <th class=" col-lg-1 col-md-1 col-sm-1">OPERACIONES</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contacts_show', { 'id': entity.id }) }}">{{ entity.email }}</a></td>
                <td>{{ entity.subject }}</td>
                <td>{% if entity.dateTime %}{{ entity.dateTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('contacts_show', { 'id': entity.id }) }}">ver</a>
                    </li>                    
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    {% endblock %}
