{% extends '::basepat.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block submenupatients %}
    <br>
    <p><a href="{{ path('storageplans-list') }}" class="submit lilaOscuro">Cambiar suscripci√≥n</a></p>
{% endblock %}
{% block body -%}
    <div class="row" style="height:90%; ">
        
        <div class="col-xs-12 col-md-12 col-lg-12 pacientesRight">
            <div class="docHomeIntScroll mCustomScrollbar">
                <div class="pacientesRightEspacio">                 
                    <h5>Elija su plan</h5>                    
                    <div class="tablilla storagePlans">
                        <table cellpadding="0" cellspacing="0" border="0" class="tablaTablilla">                                                
                            <tr>
                                {% for entity in entities %} 
                                    <td class="tablillaEncabezado mayuscula">{{entity.name}}</td>                                
                                {% endfor %} 
                            </tr>
                            <tr>
                                {% for entity in entities %} 
                                    <td style="padding-right:7%;">{{entity.description}}</td>                                
                                {% endfor %} 
                            </tr>
                            <tr>
                                {% for entity in entities %} 
                                    {% if patient.storagePlan.id is defined and patient.storagePlan.id  ==entity.id %} 
                                        <td class="masAlto">Plan Actual</td>                                
                                    {%else%}
                                        <td class="masAlto"><a href="#" class="submit lilaOscuro">Comenzar plan <!--span>{{entity.price}}</span--></a></td>                                
                                        
                                    {% endif %}
                                {% endfor %} 
                            </tr>                            
                        </table><!--tablaTablilla-->
                    </div><!--tablilla-->        

                </div><!--pacientesRightEspacio-->
            </div><!--docHomeIntScroll mCustomScrollbar-->
        </div><!--pacientesRight-->
    </div><!--row-->  
    <div class="row" style="height:10%; ">
        <div class="col-xs-12 barrafooter barraf_acercade">
            <ul>
                <li class="current"><a href="#">Planes</a><div class="arrow acercaNosotros"></div></li>                
            </ul>
        </div>
    </div><!--row-->
{% endblock %}
