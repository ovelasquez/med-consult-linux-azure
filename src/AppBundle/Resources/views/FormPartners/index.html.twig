{% extends '::baseadm.html.twig' %}

{% block body -%}
    <h5>FormPartners list</h5>

    <table cellpadding="0" cellspacing="0" border="0" width="90%" class="table-striped tablaAdm ">
        <thead>
            <tr>
                <th>Nombre de la empresa</th>
                <th>Nombre del contacto</th>
                <th>Fecha de solicitud</th>                
                <th>OPERACIONES</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('formpartners_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.nameContact }}</td>
                <td>{% if entity.dateTime %}{{ entity.dateTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('formpartners_show', { 'id': entity.id }) }}">ver</a>
                    </li>                    
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    {% endblock %}
